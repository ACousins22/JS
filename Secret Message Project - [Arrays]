/* CodeCademy: Introduction to JavaScript || Secret Message Project (Arrays)
Written 12/08/2022 by Alex Cousins */

let secretMessage = [
  "Learning",
  "is",
  "not",
  "about",
  "what",
  "you",
  "get",
  "easily",
  "the",
  "first",
  "time,",
  "it",
  "is",
  "about",
  "what",
  "you",
  "can",
  "figure",
  "out.",
  "-2015,",
  "Chris",
  "Pine,",
  "Learn",
  "JavaScript",
];

secretMessage.pop(); // Removes last string in the array
secretMessage.push("to", "Program"); // Adds both elements to end of secretMessage array
secretMessage[7] = "right"; // Replaces 8th (-1) array in index with "right".
secretMessage.shift(); // Removes first element in array
secretMessage.unshift("Programming"); // Adds element to beginning of the array
secretMessage.splice(6, 5, "know"); // Pull elements from array. Splices with word 'know'.
console.log(secretMessage.join()); // Outputs the final string and proof of work.
